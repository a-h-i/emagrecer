{
  "compilerOptions": {
    "allowJs": true,
    "outDir": "dist",
    "strict": true,
    "skipLibCheck": true,
    "lib": ["ESNext"],
    "esModuleInterop": true,
    "module": "CommonJS",
    "resolveJsonModule": true,
    "incremental": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "rootDir": ".",
    "composite": true,
    "target": "ES2023"
  },
  "exclude": ["node_modules", "dist", "eslint.config.mjs"],
  "include": ["src/**/*.ts"],
  "references": [
    {
      "path": "../../packages/storage"
    }
  ]
}
